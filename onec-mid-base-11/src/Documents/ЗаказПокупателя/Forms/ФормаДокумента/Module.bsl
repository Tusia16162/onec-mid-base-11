	//++Нат     
	
	ЭлементКонтактноеЛицо = Элементы.Вставить("КонтактноеЛицо", Тип("ПолеФормы"), Элементы.ГруппаШапкаПраво,);
	ЭлементКонтактноеЛицо.Вид = ВидПоляФормы.ПолеВвода;
	ЭлементКонтактноеЛицо.ПутьКДанным = "Объект.ДЗ_КонтактноеЛицо";
	ЭлементКонтактноеЛицо.Заголовок = "Контактное лицо"; 
	
	
	ЭлеменнтСкидка = Элементы.Вставить("Скидка", Тип("ПолеФормы"), Элементы.ГруппаШапкаЛево,);
	ЭлеменнтСкидка.Вид = ВидПоляФормы.ПолеВвода;
	ЭлеменнтСкидка.ПутьКДанным = "Объект.ДЗ_СогласованнаяСкидка";
	ЭлеменнтСкидка.Заголовок = "Согласованная скидка"; 
	ЭлеменнтСкидка.УстановитьДействие("ПриИзменении", "ПриИзмененииЭлеменнтСкидка");
	
	Если Элементы.Найти("КнопкаПересчетСкидки") = Неопределено Тогда
		
		КомандаПересчетСкидки = Команды.Добавить("ПересчетСкидки");
		КомандаПересчетСкидки.Заголовок = "Пересчет скидки";
		КомандаПересчетСкидки.Действие = "КомандаПересчетСкидки";
		
		КнопкаКоманды = Элементы.Вставить("КнопкаПересчетСкидки", Тип("КнопкаФормы"), Элементы.ГруппаШапкаЛево,);
		КнопкаКоманды.ИмяКоманды = "ПересчетСкидки";
		КнопкаКоманды.Вид = ВидКнопкиФормы.ОбычнаяКнопка;
		
	КонецЕсли;
	
	//++
	
	
КонецПроцедуры

